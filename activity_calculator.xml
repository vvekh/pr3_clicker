<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Calculator"
    android:orientation="vertical">

                                    <!-- ВЫВОД ПРЕДЫДУЩЕГО ЧИСЛА -->
   <TextView
       android:id="@+id/last_txt"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginTop="15dp"
       android:layout_marginRight="15dp"
       android:layout_marginLeft="10dp"
       android:text="0"
       android:textSize="45dp"
       android:gravity="right"
       android:textColor="@color/purple_200"/>
                                    <!-- ВВОД АКТУАЛЬНОГО ЧИСЛА -->
    <EditText
        android:id="@+id/actual_edittxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:hint="0"
        android:textSize="55dp"
        android:gravity="right"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:textColor="@color/purple_500"
        android:textColorHint="@color/purple_500"/>

                                    <!-- ПЕРВЫЙ РЯД КНОПОК -->
    <LinearLayout
        android:id="@+id/panel_one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">
        <Button
            android:id="@+id/clear_btn"
            android:onClick="onOperationClick"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:backgroundTint="@color/purple_200"
            android:text="АС"
            android:textSize="35dp"/>
        <Button
            android:id="@+id/plmn_btn"
            android:onClick="onNumberClick"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:backgroundTint="@color/purple_200"
            android:text="+/–"
            android:textSize="30dp" />
        <Button
            android:id="@+id/percent_btn"
            android:onClick="onPercentClick"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:backgroundTint="@color/purple_200"
            android:text="%"
            android:textSize="45dp"/>
        <Button
            android:id="@+id/division_btn"
            android:onClick="onOperationClick"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:backgroundTint="@color/teal_200"
            android:text="÷"
            android:textSize="50dp"/>
    </LinearLayout>

                                    <!-- ВТОРОЙ РЯД КНОПОК -->

    <LinearLayout
        android:id="@+id/panel_two"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/firstButtonPanel"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">
        <Button
            android:id="@+id/btn7"
            android:onClick="onNumberClick"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="7"
            android:textSize="50dp"/>
        <Button
            android:id="@+id/btn8"
            android:onClick="onNumberClick"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="8"
            android:textSize="50dp"/>
        <Button
            android:id="@+id/btn9"
            android:onClick="onNumberClick"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="9"
            android:textSize="50dp"/>
        <Button
            android:id="@+id/multiply_btn"
            android:onClick="onOperationClick"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:backgroundTint="@color/teal_200"
            android:text="×"
            android:textSize="50dp"/>
    </LinearLayout>

                                    <!-- ТРЕТИЙ РЯД КНОПОК -->

    <LinearLayout
        android:id="@+id/panel_three"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/secondButtonPanel"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">
        <Button
            android:id="@+id/btn4"
            android:onClick="onNumberClick"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="4"
            android:textSize="50dp"/>
        <Button
            android:id="@+id/btn5"
            android:onClick="onNumberClick"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="5"
            android:textSize="50dp"/>
        <Button
            android:id="@+id/btn6"
            android:onClick="onNumberClick"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="6"
            android:textSize="50dp"/>
        <Button
            android:id="@+id/minus_btn"
            android:onClick="onOperationClick"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:backgroundTint="@color/teal_200"
            android:text="–"
            android:textSize="50dp"/>
    </LinearLayout>

                                    <!-- ЧЕТВЕРТЫЙ РЯД КНОПОК -->

    <LinearLayout
        android:id="@+id/panel_four"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/secondButtonPanel"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">
        <Button
            android:id="@+id/btn1"
            android:onClick="onNumberClick"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="1"
            android:textSize="50dp"/>
        <Button
            android:id="@+id/btn2"
            android:onClick="onNumberClick"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="2"
            android:textSize="50dp"/>
        <Button
            android:id="@+id/btn3"
            android:onClick="onNumberClick"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="3"
            android:textSize="50dp"/>
        <Button
            android:id="@+id/plus_btn"
            android:onClick="onOperationClick"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:backgroundTint="@color/teal_200"
            android:text="+"
            android:textSize="50dp"/>
    </LinearLayout>

                                    <!-- ПЯТЫЙ РЯД КНОПОК -->

    <LinearLayout
        android:id="@+id/panel_five"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/secondButtonPanel"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <Button
            android:id="@+id/btn0"
            android:onClick="onNumberClick"
            android:layout_weight="2.1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="0"
            android:textSize="50dp"/>
        <Button
            android:id="@+id/btn_point"
            android:onClick="onNumberClick"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text=","
            android:textSize="50dp"/>
        <Button
            android:id="@+id/ravno_btn"
            android:onClick="onRavnoClick"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:backgroundTint="@color/teal_200"
            android:text="="
            android:textSize="50dp"/>
    </LinearLayout>

</LinearLayout>